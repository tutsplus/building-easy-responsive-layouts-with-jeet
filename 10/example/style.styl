@import '../../../bower_components/jeet/stylus/jeet'

color1 = #ed2d48
bp = 800px

// edit(lightblue)

html
  margin: 3rem
  line-height: 1.62em
  color: #333
  @media (max-width: bp)
    margin: 1rem

*
  margin: 0
  padding: 0
  font-family: sans-serif
  box-sizing: border-box
  transition: all 400ms ease

section
  overflow: hidden

aside
  col(1/4, gutter: 4)
  @media (max-width: bp)
    stack()
    margin-bottom: 1rem
  nav
    a
      display: block
      padding: 1em
      text-decoration: none
      background: color1
      border-bottom: 1px solid darken(color1, 10%)
      color: white
      &:hover
        background: darken(color1, 5%)
  .logo
    text-align: center
    display: block
    margin-bottom: 1rem
    img
      max-width: 70%
      display: inline-block

.posts
  col(3/4, gutter: 4)
  @media (max-width: bp)
    stack()

.post
  cf()
  margin-bottom: 3rem
  border: 1px solid #eee
  padding: 1em
  @media (max-width: bp)
    margin-bottom: 1rem
  img
    col(1/4 3/4, gutter: 4)
    @media (max-width: bp)
      stack()
      margin-bottom: 1rem

article
  col(3/4 3/4, gutter: 4)
  @media (max-width: bp)
    stack()

h1
  margin-top: 0
  margin-bottom: 1rem
