@import '/bower_components/jeet/stylus/jeet'

// edit()

body
  margin: 1rem

.wrap
  center(800px)

aside
  stack()
  text-align: center
  @media (min-width: 600px)
    col(1/3)
  nav
    margin-bottom: 1rem
    a
      display: block
      background: lighten(red, 30%)
      color: white
      text-decoration: none
      padding: 1em
      border-bottom: 1px solid lighten(red, 25%)
.posts
  stack()
  @media (min-width: 600px)
    col(2/3)

img
  max-width: 100%

*
  margin: 0
  padding: 0
  box-sizing: border-box
  font-family: sans-serif

.post
  cf()
  border: 1px solid #ddd
  padding: .5em
  margin-bottom: 1rem
  > img
    stack()
    margin-bottom: 1rem
    @media (min-width: 600px)
      col(1/4)
  > article
    stack()
    @media (min-width: 600px)
      col(3/4)

.logo
  display: block
  margin-bottom: 1rem
